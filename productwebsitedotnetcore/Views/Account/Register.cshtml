@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="row">
<div class="col-4 offset-4">
    <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Register"]</h1>
    
</div>
</div>


<div class="col-4 offset-4">
    <div asp-validation-summary="ModelOnly"></div>
    <form method="post">
        <div class="form-group mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username"  class="form-control" placeholder="StewieGriffin"/>
            <span asp-validation-for="Username" class="text-danger small"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Password"/>
        </div>
                <div class="form-group mb-3">
            <label asp-for="RePassword" class="form-label">Repasword</label>
            <input asp-for="RePassword" class="form-control" type="password" placeholder="Password"/>
        </div>
        <div class="form-group mb-3 d-grid">
                <button type="submit" class="btn btn-primary d-block">Register</button>
        </div>
    </form>
</div>